{
    "name": "softvence-backend-template",
    "version": "0.0.1",
    "description": "",
    "author": "Softvence Omega",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "generate:enum": "tsx src/scripts/generate.enum.ts",
        "prisma:generate": "npm run generate:enum && npx prisma generate",
        "prisma:migrate": "npx prisma migrate deploy",
        "prisma:reset": "npx prisma migrate reset",
        "start:docker": "prisma generate && prisma migrate deploy && node dist/src/main",
        "lint:fix": "eslint . --ext .ts,.js,.jsx,.tsx --fix",
        "format:fix": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
        "ci:fix": "npm run format:fix",
        "db:seed": "tsx prisma/seed.ts",
        "prepare": "husky"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.1",
        "@nestjs/core": "^11.0.1",
        "@nestjs/platform-express": "^11.0.1",
        "@prisma/client": "^6.18.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "slugify": "^1.6.6",
        "socket.io": "^4.8.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@types/express": "^5.0.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.10.7",
        "@types/supertest": "^6.0.2",
        "dotenv": "^17.2.3",
        "dotenv-expand": "^12.0.3",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.2",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "jest": "^30.0.0",
        "prettier": "^3.4.2",
        "prisma": "^6.18.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.20.6",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    }
